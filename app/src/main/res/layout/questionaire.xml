<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Questionaire">


    <TextView
        android:id="@+id/textview_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:text="a.) A productive cough for more than 3 weeks?" />

    <LinearLayout
        android:id="@+id/layout_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_a"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radio_group_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text="No" />
        </RadioGroup>

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Yes" />

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="No" />
    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/layout_a"
        android:layout_marginTop="8dp"
        android:background="#C2185B" />


</RelativeLayout>